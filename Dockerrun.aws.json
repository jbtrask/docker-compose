{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "rails",
      "host": {
        "sourcePath": "/var/app/current/apps/rails"
      }
    },
    {
      "name": "wordpress",
      "host": {
        "sourcePath": "/var/app/current/apps/wordpress"
      }
    },
    {
      "name": "ghost",
      "host": {
        "sourcePath": "/var/app/current/apps/ghost"
      }
    },
    {
      "name": "html",
      "host": {
        "sourcePath": "/var/app/current/apps/html"
      }
    },
    {
      "name": "mysql",
      "host": {
        "sourcePath": "/var/app/current/mysql"
      }
    },  
    {
      "name": "nginx",
      "host": {
        "sourcePath": "/var/app/current/nginx"
      }
    }  
  ],
  "containerDefinitions": [
    {
      "name": "rails",
      "image": "jbtrask/rails",
      "essential": true,
      "memory": 128,
      "links": [
        "db"
      ],
      "mountPoints": [
        {
          "sourceVolume": "rails",
          "containerPath": "/rails",
          "readOnly": true
        }
      ]
    },
    {
      "name": "wordpress",
      "image": "wordpress",
      "essential": true,
      "memory": 128,
      "links": [
        "db"
      ],
      "mountPoints": [
        {
          "sourceVolume": "wordpress",
          "containerPath": "/var/www/html",
          "readOnly": true
        }
      ]
    },
    {
      "name": "ghost",
      "image": "ghost",
      "essential": true,
      "memory": 128,
      "mountPoints": [
        {
          "sourceVolume": "ghost",
          "containerPath": "/var/lib/ghost",
          "readOnly": true
        }
      ]
    },
    {
      "name": "db",
      "image": "mysql",
      "essential": true,
      "memory": 128,
      "environment":[
        {
          "name": "MYSQL_ROOT_PASSWORD",
          "value": "password"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "mysql",
          "containerPath": "/var/lib/mysql",
          "readOnly": true
        }
      ]
    },
    {
      "name": "nginx",
      "image": "nginx",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": [
        "rails",
        "wordpress",
        "ghost"
      ],
      "mountPoints": [
        {
          "sourceVolume": "html",
          "containerPath": "/var/www/html",
          "readOnly": true
        },
        {
          "sourceVolume": "nginx",
          "containerPath": "/etc/nginx/conf.d",
          "readOnly": true
        },
        {
          "sourceVolume": "awseb-logs-nginx-proxy",
          "containerPath": "/var/log/nginx"
        }
      ]
    }
  ]
}