{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "html",
      "host": {
        "sourcePath": "/var/app/current/apps/html"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "nginx",
      "image": "nginx",
      "links": [
        "ghost"
      ],
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "html",
          "containerPath": "/var/www/html",
          "readOnly": true
        }
      ],
      "memory": 64
    }
  ],
  "containerDefinitions": [
    {
      "name": "ghost",
      "image": "ghost",
      "memory": 64
    }
  ]
}