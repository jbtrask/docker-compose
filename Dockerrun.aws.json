{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "nginx",
      "host": {
        "sourcePath": "/var/app/current/nginx"
      }
    },
    {
      "name": "html",
      "host": {
        "sourcePath": "/var/app/current/apps/html"
      }
    },
    {
      "name": "rails",
      "host": {
        "sourcePath": "/var/app/current/apps/rails"
      }
    },
    {
      "name": "ghost",
      "host": {
        "sourcePath": "/var/lib/ghost"
      }
    },
    {
      "name": "mysql",
      "host": {
        "sourcePath": "/var/lib/mysql"
      }
    },
    {
      "name": "wordpress",
      "host": {
        "sourcePath": "/var/lib/wordpress"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "nginx",
      "image": "nginx",
      "memory": 128,
      "links": [
        "ghost",
        "wordpress"
      ],
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "html",
          "containerPath": "/var/www/html",
          "readOnly": true
        },
        {
          "sourceVolume": "nginx",
          "containerPath": "/etc/nginx/conf.d",
          "readOnly": true
        },
        {
          "sourceVolume": "awseb-logs-nginx",
          "containerPath": "/var/log/nginx"
        }
      ]
    },
    {
      "name": "ghost",
      "image": "ghost",
      "memory": 128,
      "portMappings": [
        {
          "containerPort": 2368
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "ghost",
          "containerPath": "/var/lib/ghost"
        }
      ]
    },
    {
      "name": "db",
      "image": "mysql",
      "memory": 128,
      "portMappings": [
        {
          "containerPort": 3306
        }
      ],
      "environment":[
        {
          "name": "MYSQL_ROOT_PASSWORD",
          "value": "password"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "mysql",
          "containerPath": "/var/lib/mysql"
        }
      ]
    },
    {
      "name": "wordpress",
      "image": "wordpress",
      "essential": true,
      "memory": 128,
      "links": [
        "db"
      ],
      "portMappings": [
        {
          "containerPort": 80
        }
      ],
      "environment": [
        {
          "name": "WORDPRESS_DB_HOST",
          "value": "db"
        },
        {
          "name": "WORDPRESS_DB_NAME",
          "value": "wordpress"
        },
        {
          "name": "WORDPRESS_DB_PASSWORD",
          "value": "password"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "wordpress",
          "containerPath": "/var/www/html"
        }
      ]
    }
  ]
}